#!/bin/bash

post_process () {
	sed 's/^:- // ; s/^_ = //' | tr -d '[|]' | sed 's/ *//g'|grep .
}
 
SRC=${1-$(dirname $0)/tests/quenya_phonotaxis.pl}
START_TERM=${2-word}
MAX=${3-100}
DIR=$(dirname $([ -L $0 ] && readlink -f $0 || echo $0))
PROLOG="$DIR/opl -n -q -r -l $MAX"

echo "${START_TERM}(_,[])." | $PROLOG $SRC | post_process
